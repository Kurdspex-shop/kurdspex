<%- include("../portials/header") %>
<link rel="stylesheet" href="../../css/singUpStyle.css">

<title>Kurdspex</title>
</head>
<body> 

<div class="container sing">
    <div class="row">
        <div class="col-xl-6 mx-auto mt-3 mt-md-5">
            <div class="text-center">
                <a href="/"><img class="logo" src="/KurdspexV1.svg"></a>
                <div class="mb-2">
                    <h1 class="card-title">Kurdspex</h1>
                </div>
            </div>
        </div>
    </div>

    <% if(error[0]) { %> 
        <div class="row m-0">
            <div class="col-12 col-lg-5 mx-auto p-0">
                <div class="alert alert-danger mt-2 text-center" role="alert">
                    <%= error[0] %> 
                </div>
            </div>
        </div>
    <% } %> 

    <div class="row">
        <div class="col-xl-6 mx-auto post">
            <div class="">
                <form class="px-2 px-md-5 py-2 validation" action="/sing-up" method="POST" novalidate>
                    <label for="name">User Name</label>
                    <input class="form-control" type="text" name="username" placeholder="enter your user name" required>
                    <label for="email" class="pt-2">Email address</label>
                    <input type="email" class="form-control" name="email" placeholder="name@example.com" required>
                    <label for="phoneNumber" class="pt-2">Phone Number</label>
                    <input type="tel" class="form-control" name="phoneNumber" maxlength="11" placeholder="Phone Number" required>
                    <label for="name" class="pt-2">Password</label>
                    <input class="form-control" type="password" name="user_password" placeholder="Password" required>
                    <div class="text-center b">
                        <input class="mx-auto mt-4 px-5 py-1 btn btn-success" type="submit" value="Sing Up">
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
 
<script src="../javaScript/validation.js"></script>

</body>
</html>