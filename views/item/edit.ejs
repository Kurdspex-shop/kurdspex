<%- include("../portials/header") %>
<link rel="stylesheet" href="../../css/navbarStyle.css">
<link rel="stylesheet" href="../../css/infobarStyle.css">

<title>Kurdspex</title>
</head>
<body>
    
<%- include("../portials/navbar") %> 
<div class="container l">
    <form action="/items/<%= item.id %>?_method=PUT" method="POST" class="mt-3 validation" novalidate>
        <label for="name" class="mt-1">Item Name</label>
        <input class="form-control" id="name" name="item[item_name]" type="text" placeholder="Item Name" value="<%= item.item_name %>" required>
        <div class="d-flex mt-2">
            <select class="form-select mx-3" name="item[item_type]" required>
                <option selected disabled value="">Type Of Item</option>
                <%- include("../option/itemOption") %> 
            </select>
            <select class="form-select mx-3" name="item[mode]" required>
                <option selected disabled value="">Item Status</option>
                <option value="new">New Item</option>
                <option value="used">Used Item</option>
            </select>
            <select class="form-select mx-3" name="item[visible]">
                <option selected value="true">Visible</option>
                <option value="false">Hide</option>
            </select>
        </div>
        <label for="image" class="mt-2">Main Image Url</label>
        <input class="form-control" id="image" name="item[main_image]" type="text" placeholder="Main Image Url" value="<%= item.main_image %>" required>
        <label for="image1" class="mt-1">Sub Image Url</label>
        <input class="form-control" id="image1" name="item[sub_image_1]" type="text" placeholder="Sub Image Url" value="<%= item.sub_image_1 %>" required>
        <input class="form-control mt-1" id="image1" name="item[sub_image_2]" type="text" placeholder="Sub Image Url" value="<%= item.sub_image_2 %>" required>
        <input class="form-control mt-1" id="image1" name="item[sub_image_3]" type="text" placeholder="Sub Image Url" value="<%= item.sub_image_3 %>" required>
        <div class="form-floating mt-3">
            <textarea class="form-control" name="item[item_description]" placeholder="description text" id="description" style="height: 100px" required><%= item.item_description %></textarea>
            <label for="description">Description</label>
        </div>
        <div class="form-floating mt-3">
            <textarea class="form-control" name="item[details]" placeholder="details text" id="details" style="height: 100px" required><%= item.details %></textarea>
            <label for="details">Details</label>
        </div>
        <div class="form-floating mt-3">
            <textarea class="form-control" name="item[body]" placeholder="body text" id="body" style="height: 200px"><%= item.body %></textarea>
            <label for="body">Body</label>
        </div>
        <label for="rating" class="mt-3">Item Rating</label>
        <input class="form-control" id="rating" name="item[rating]" type="number" min="1" max="5" placeholder="Item rating" value="<%= item.rating %>">
        <div class="d-flex">
            <div class="mx-auto" style="width: 24%;">
                <label for="price" class="mt-3">Item Price</label>
                <input class="form-control" id="price" name="item[price]" type="text" min="0" placeholder="Item price" value="<%= item.price %>" required>
            </div>

            <div class="mx-auto" style="width: 24%;">
                <label for="profit" class="mt-3">Profit</label>
                <input class="form-control" id="profit" name="item[profit]" type="text" min="0" placeholder="Profit" value="<%= item.profit %>" required>
            </div>

            <div class="mx-auto" style="width: 24%;">
                <label for="discount" class="mt-3">Discount</label>
                <input class="form-control" id="discount" name="item[discount]" type="text" min="0" placeholder="Discount" value="<%= item.discount %>">
            </div>

            <div class="mx-auto" style="width: 24%;">
                <label for="coin" class="mt-3">Coin</label>
                <input class="form-control" id="coin" name="item[coin]" type="text" min="0" placeholder="coin" value="<%= item.coin %>">
            </div>
        </div>
        <label for="quantity" class="mt-3">Item Quantity</label>
        <input class="form-control" id="quantity" name="item[quantity]" type="text" min="1" placeholder="Item Quantity" value="<%= item.quantity %>" required>
        <label for="keys" class="mt-2">Keys for Searching</label>
        <input class="form-control" id="keys" name="item[tags]" type="text" placeholder="Keys for Searching" value="<%= item.tags %>" required>
        <div class="d-grid gap-2 col-6 mx-auto mb-5">
            <button type="submit" class="btn btn-success mx-auto mt-5" style="align-self: center;">Update Item</button>
        </div>
    </form>
</div>

<script src="../../javaScript/validation.js"></script>

<%- include("../portials/infobar") %> 
<%- include("../portials/footer") %>