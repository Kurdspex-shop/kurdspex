<%- include("../portials/header") %>
<link rel="stylesheet" href="../../css/showStyle.css">
<link rel="stylesheet" href="../../css/coinShowStyle.css">
<link rel="stylesheet" href="../../css/navbarStyle.css">
<link rel="stylesheet" href="../../css/infobarStyle.css">

<title>Kurdspex</title>
</head>
<body>

<%- include("../portials/navbar") %>
<div id="nav">Coin Items</div>

<% if(admin) { %>
    <div class="blog-show">
      <div class="dropdown">
        <button id="plus" class="p-0" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false" style="font-size: 40px;">
          <i class="far fa-caret-square-down p-0"></i>
        </button>
        <ul class="dropdown-menu text-center" aria-labelledby="dropdownMenuButton1">
          <li><a class="btn btn-success px-4" href="/coinItems/<%= item.id %>/edit">Edit</a></li>
          <li><form class="text-center mt-2" id="option">
            <button type="button" class="btn btn-danger px-4 m-0" data-bs-toggle="modal" data-bs-target="#exampleModal">
                Delete
            </button>
          </form></li>
        </ul>

          <!-- Modal -->
          <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content" style="border-radius: 10px;">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">Are you sure you want to delete the blog</h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-footer">
                  <form class="text-center mt-2" id="option" action="/coinItems/<%= item.id %>?_method=DELETE" method="POST">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-danger px-2 m-0">Delete</button>
                  </form>
                </div>
              </div>
            </div>
          </div>

      </div>
    </div>
<% } %>

<span class="badge rounded-pill bg-success ms-5 item-state"><%= item.mode %></span>

<div class="container-fluid mt-5 showItem">
  <div class="row mx-auto">
    <div class="col-xl-5" style="min-height: 350px;">
      <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img src=<%= item.main_image %>  class="d-block">
            </div>
            <div class="carousel-item">
              <img src=<%= item.sub_image_1 %> class="d-block">
            </div>
            <div class="carousel-item">
              <img src=<%= item.sub_image_2 %> class="d-block">
            </div>
            <div class="carousel-item">
              <img src=<%= item.sub_image_3 %> class="d-block">
            </div>
          </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
      </div>
    </div>
    <div class="col-xl-7" style="min-height: 800px;">
      <h1 class="mx-auto display-5 title"><%= item.item_name %></h1>
      <div class="h4 description"><%= item.item_description %></div>
        
      <div class="card">
          <div class="card-body bg-dark">
            <div class="d-flex">
              <h5 class="card-title text-warning"><%= item.price %> coins</h5>
            </div>
            <p class="card-text text-light">Only <%= item.quantity %>  left in stock - order soon.</p>
            <div class="d-flex">
              <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#Modal">
                Buy Now
              </button>
              <%- include("../portials/coinModel") %>
            </div>
          </div>
      </div>

      <div class="det">
          <%- item.details %> 
      </div>
    </div>

    <div class="card text-center mt-5 mb-5 mx-auto bg-light p-3" style="border-radius: 30px;">
      <div class="card-body">
        <div class="row">
          <div class="col-md-4 my-4 my-md-0">
            <i class="fas fa-shield-alt text-dark" style="font-size: 80px;"></i>
            <h4 class="mt-3">1 Week Warranty</h4>
          </div>

          <div class="col-md-4 my-4 my-md-0">
            <i class="fas fa-shipping-fast text-dark" style="font-size: 80px;"></i>
            <h4 class="mt-3">3-5 Days Shipping</h4>
          </div>

          <div class="col-md-4 my-4 my-md-0">
            <i class="fas fa-check-circle text-dark" style="font-size: 80px;"></i>
            <h4 class="mt-3">100% Original</h4>
          </div>
        </div>
      </div>
    </div>

    <div class="my-5">
      <%- item.body %>
    </div>
  </div>
</div>

<script src="../../javaScript/modalLanguage.js"></script>

<%- include("../portials/infobar") %> 
<%- include("../portials/footer") %>