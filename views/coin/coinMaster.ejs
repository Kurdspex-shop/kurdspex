<%- include("../portials/header") %>
<link rel="stylesheet" href="../../css/searchBarStyle.css">
<link rel="stylesheet" href="../../css/coinMasterStyle.css">
<link rel="stylesheet" href="../../css/accountMasterStyle.css">
<link rel="stylesheet" href="../../css/infobarStyle.css">
<link rel="stylesheet" href="../../css/navbarStyle.css">

<title>Kurdspex</title>
</head>
<body>

<%- include("../portials/navbar") %>

<div class="container accountMaster mt-3 mb-5" style="min-height: 1000px;">
    <div class="row">
        <div class="col-xl-12 mx-auto">
            <div class="card text-center bg-dark text-light title">
                <div class="card-body">
                  <h1 class="card-title">Coin Master</h1>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <form id="blog" class="d-flex mt-3 search-bar mx-auto" action="/account/coinMaster" method="GET">
            <input class="form-control" name="search" type="search" placeholder="Search">
            <button class="btn btn-outline-dark ps-2" type="submit"><i class="fas fa-search"></i></button>
        </form>
    </div>

    <div class="row mt-4">
      <div class="col-xl-12 mx-auto">
        <div class="card text-center bg-light text-dark title">
            <div class="card-header bg-dark text-light">
                <h3 class="card-title" style="font-weight: 400;">Users Account</h3>
            </div>
            <div class="card-body">
                <% for(var i = 0; i < user.length; i++){%>
                    <div class="card mt-1">
                        <div class="d-flex">
                          <div class="h4 number bg-dark text-light px-3 py-2 mb-0 text-center" style="width: 4%;"><%= i + 1 %></div>
                          <div class="h4 ps-3 py-2 mb-0" style="width: 30%;"><%= user[i].username %></div>
                          <div class="h4 py-2 mb-0 me-auto" style="width: 40%;"><%= user[i].coin %> coins</div>
                          <div class="d-flex ms-auto" style="width: 30%;">
                            <form action="/account/coinMaster/coin?_method=PUT" method="POST" class="w-100 d-flex">
                                <input type="text" value="<%= user[i].id %>" name="id" style="display: none;">
                                <input class="my-0 h-100 w-75 coin-add ps-3" name="coin" type="number" placeholder="+ add coin/ - subtract coin">
                                <input class="coin-add-btn w-25 bg-dark text-light" type="submit" value="Add">
                            </form>
                          </div>
                        </div>
                    </div>
                <% } %> 
            </div>
        </div>
      </div>
    </div>
</div>

<%- include("../portials/infobar") %> 
<%- include("../portials/footer") %>